<% provide(:title, @user.name) %>
<div class="row">



<% flash.each do |message_type, message| %>

<%= content_tag(:div, message, class: "alert alert-#{message_type}") %>

<% end %>


  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user) %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>


</div>